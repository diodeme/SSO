<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.thunisoft.web.mapper.UserMapper">
    <sql id="table">users</sql>
    <sql id="selectFields">id,account,username,password,salt</sql>
    <select id="getUserById" resultType="com.thunisoft.web.model.User">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>
        WHERE
        id = #{id}
    </select>
    <select id="findByAccount" resultType="com.thunisoft.web.model.User">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>
        WHERE
        account = #{account}
    </select>
</mapper>
